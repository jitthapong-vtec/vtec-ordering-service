<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModel="clr-namespace:VerticalTec.POS.Report.Mobile.ViewModels"
             xmlns:ctrls="clr-namespace:VerticalTec.POS.Report.Mobile.Controls"
             NavigationPage.HasNavigationBar="False"
             mc:Ignorable="d"
             x:Class="VerticalTec.POS.Report.Mobile.Views.MainPage">
    <ContentPage.BindingContext>
        <viewModel:MainViewModel/>
    </ContentPage.BindingContext>
    <NavigationPage.TitleView>
        <StackLayout Orientation="Horizontal" VerticalOptions="CenterAndExpand">
            <Label FontSize="Large" Text="Report" VerticalOptions="Center" Style="{StaticResource NavBarTitleFont}"/>
            <ctrls:TappedGrid TappedCommand="{Binding RefreshCommand}" VerticalOptions="CenterAndExpand" HorizontalOptions="EndAndExpand" Margin="8">
                <Label Style="{StaticResource NavBarIconFont}" Text="&#xf2f1;"/>
            </ctrls:TappedGrid>
        </StackLayout>
    </NavigationPage.TitleView>
    <Grid>
        <WebView Source="{Binding Url}" Navigating="WebView_Navigating" Navigated="WebView_Navigated"/>
    </Grid>

</ContentPage>
