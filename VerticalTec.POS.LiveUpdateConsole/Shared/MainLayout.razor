@inherits LayoutComponentBase
@using VerticalTec.POS.LiveUpdateConsole.Pages.Auth

<AuthorizeView>
    <Authorized>
        <div class="sidebar">
            <NavMenu />
        </div>
        <div class="main">
            <nav class="navbar navbar-expand navbar-light topbar static-top shadow-sm">
                <div class="ml-auto">
                    <UserLoginView />
                </div>
            </nav>
            <div class="content px-4">
                @Body
            </div>
        </div>
    </Authorized>
    <NotAuthorized>
        <DirectToLogin />
    </NotAuthorized>
</AuthorizeView>
